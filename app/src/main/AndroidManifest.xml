<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.regnarddelagny.handball" >

    <uses-sdk android:minSdkVersion="15" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".NoViewPager.MainMenu"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".NoViewPager.PlayersActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".NoViewPager.CreatePlayerActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".AnalyseTirs.AnalyseTirsActivities.AnalyseTirsWriting"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".NoViewPager.ListeAnalyseTirs"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".NoViewPager.NewAnalyseActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".AnalyseTirs.AnalyseTirsActivities.AnalyseTirsReading"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".ViewPager.ViewPagerActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SchemasTactiques.SchemasPrepActivity"
            android:screenOrientation="landscape"
            android:label="@string/title_activity_schemas_prep" >
        </activity>
    </application>

</manifest>
